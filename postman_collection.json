{
  "info": {
    "name": "Course Management API",
    "_postman_id": "your-id",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{ \"email\": \"admin@example.com\", \"password\": \"password123\", \"name\": \"Admin\" }"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "register"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{ \"email\": \"admin@example.com\", \"password\": \"password123\" }"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "Get Courses",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/api/courses",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "courses"]
        }
      }
    },
    {
      "name": "Create Course (admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer <ACCESS_TOKEN>" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"title\": \"JS Basics\", \"description\": \"Learn JS\", \"price\": 19.99, \"instructor\": \"John Doe\" }"
        },
        "url": {
          "raw": "http://localhost:5000/api/courses",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "courses"]
        }
      }
    },
    {
      "name": "Purchase Course",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer <ACCESS_TOKEN>" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{ \"courseId\": \"<COURSE_ID>\" }" },
        "url": {
          "raw": "http://localhost:5000/api/purchases",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "purchases"]
        }
      }
    },
    {
      "name": "Get My Purchases",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer <ACCESS_TOKEN>" }
        ],
        "url": {
          "raw": "http://localhost:5000/api/purchases/me",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "purchases", "me"]
        }
      }
    }
  ]
}
